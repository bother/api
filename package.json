    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "husky": "^4.2.5",
    "i18n-iso-countries": "^6.0.0",
    "lodash": "^4.17.19",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-node-dev": "^1.0.0-pre.49",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
