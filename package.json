    "firebase-admin": "^8.12.1",
    "graphql": "14.6.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.27.0",
    "mongoose": "^5.9.19",
    "type-graphql": "^0.17.6",
    "typedi": "^0.8.0"
  },
  "devDependencies": {
    "@types/chance": "^1.1.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.155",
    "@types/mongoose": "^5.7.27",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "all-the-cities": "^3.1.0",
    "chance": "^1.1.6",
    "env-cmd": "^10.1.0",
